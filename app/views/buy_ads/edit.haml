- form_for @banner do |form|
  = render :partial => 'fields', :locals => { :form => form }

  %div
    = submit_tag 'Zapisz', :class => 'submit'
    = link_to 'Anuluj', banners_path, :class => 'submit'

= render :partial => 'assets/new', :locals => { :object => @banner, :asset_type => "Attachment" }

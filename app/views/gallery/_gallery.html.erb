<div class="gallery">
  <div class="lcol_user">
    <%= link_ (gallery.thumb ? image_tag(gallery.thumb) : "123"), "gallery", "index", gallery.id %>
  </div>
  <div class="rcol_user">
    <div class="about_links">
      <div>
        <%= link_ gallery.name, "gallery", "index", gallery.id %>
      </div>
      <div>
        Zdjęć:
        <div>
          <%= gallery.photos.nil? ? 0 : gallery.photos.length %>
        </div>
      </div>
      <div>
        Filmów:
        <div>
          <%= gallery.videos.nil? ? 0 : gallery.videos.length %>
        </div>
      </div>
      <div>
        <div class="gallery_link_edit" style="float:left"><%= link_to_remote (image_tag "/edit.png"), :url => {:action=>"g_edit", :id => gallery.id}, :html => {:title => "Edytuj album", :class => "picture_link"} if gallery.rights?(curuser)%><br/></div>
        <div class="gallery_link_delete"><%= link_to (image_tag "/delete.png"), {:controller => "gallery", :action => "delete", :id => gallery.id}, {:confirm => "Czy jesteś pewien? Usunięcie albumu spowoduje usunięcie wszystkich zdjęć w nim zawartych", :title => "Usuń album", :class => "picture_link"} if gallery.rights?(curuser) %></div>
      </div>
    </div>
  </div>
  <div class="clr"></div>
</div>



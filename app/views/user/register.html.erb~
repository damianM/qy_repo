        <script type="text/javascript">
          function f(sel){
            
            var c = (sel.options[sel.selectedIndex].value);
            var v=$('h_sel').value;
            
              if((c==1 || c==0) && v==2){
                Effect.SlideUp('n_quad',{ queue: 'end' });
  
              } else if(c==2 && (v==1||v==0)){
                Effect.SlideDown('n_quad',{ queue: 'end' });
  
              }
            
            $('h_sel').value=c;
            end

          }
        </script>
        <select id="register_select"  onkeyup="f(this)" onclick="f(this)">
          <option value="0">wybierz</option>
          <option  value="1">nie posiadam</option>
          <option  value="2">posiadam</option>
        </select>
        <input type="hidden" value="0" id="h_sel"/>

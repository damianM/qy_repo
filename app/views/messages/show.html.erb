<div class="partial">
  <div class="header p_message"></div>
  <div class="body">

    <div class="message_show">
      <div class="msg_topic">Temat: <%=@message.title%></div>
      <div class="msg_body">
        <div class="col1_msg" style="text-align:center; padding-top: 5px;">
          <div>
            <% user =  (@message.sender==curuser ? @message.receiver : @message.sender)%>
            <%= link_to image_tag(user.photo.public_filename(:thumb)), user_path(user) if user.photo -%>
            <%= link_ user.login, "user", "show", user.id %>
          </div>
        </div>
        <div class="col2_msg">
          <div class="message_content"><%= @message.content%>  </div>
        </div>
        <div class="clr"></div>
      </div>
    </div>





    <div class="message_other" style='text-align: center; color: #999999; font-size: 8pt;'>Wiadomość <%=@message.sender==curuser ? "wysłana" : "otrzymana"%>: <%=lt @message.created_at%></div>
    <div style="margin-top:20px;">
      <div class="button_link2 col1" style="text-align:left;">
        <span class='remove_message'>
          <%= link_ "Usuń", "messages", "del", @message.id if @message.sender!=@user%>
        </span>
        <span class='back_link_message'>
          <%= link_ "Powrót do #{@message.sender==curuser ? "wysłanych" : "otrzymanych"}", "messages", "#{@message.sender==curuser ? "sent" : "received"}"%>
        </span>
        <%= link_ "Odpowiedz", "messages", "reply", @message.id if @message.sender!=@user%>
      </div>
      <div class="clr">
        
      </div>
    </div>
  </div>
</div>

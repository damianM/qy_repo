<div class="partial">
  <div class="header p_friends_m"></div>
  <div class="body">
    <% unless @users.blank? %>
      <table>
        <% @users.in_groups_of(2).each do |pair| %>
          <tr>
            <% pair.each do |user| %>
              <td>
                <%= render :partial => "/userinfo", :locals => {:user => user, :protect=> false, :special => "joined"}  if user %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </table>
    <% else %>
      Niestety, nikogo nie znaleziono...
    <% end %>
  </div>
</div>

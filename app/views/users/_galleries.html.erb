<div class="partial">
  <div class="header p_mygalleries"></div>
  <div class='body'>
    <% if user.galleries.length > 0 %>
 
      <% user.galleries[0..3].each do |gallery| %>
        <div class="latest_item">
          <%= render :partial => "galleries/gallery2", :locals => { :gallery => gallery } %>
        </div>
      <% end %>
      <div class="clear"></div>
    <% else %>
      Użytkownik nie utworzył jeszcze galerii
    <% end %>
      <div class="button_silver_67" style="float:right">
        <%= link_to (user.galleries.length > 0 ? "Wszystkie" : "Dodaj"), user_galleries_path(user) %>
      </div>
      <div class="clr"></div>
  </div>
</div>

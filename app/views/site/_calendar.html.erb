<div class="partial partial_right">
  <div class="header p_calendar">
  </div>
  
  <div class="body calendar">
    <%= show_calendar calendar_options %>

    <div class="calendar_links" style="margin-bottom: 15px;">
      <p><b>Ostatnio dodane imprezy:</b></p>
    
    <% events.reverse[0...5].each do |event| %>
      <%= link_to (cut event.title,20),event_path(event), :style => 'font-weight: normal;' %><br/>
    <% end %>
    </div>

    
      <div class="button_silver_75" style="float:left"><%= link_to "Dodaj nową", new_event_path  %></div>
      <div class="button_gold_100" style="float:right"><%= link_to "Pokaż wszystkie", list_events_path({:id => 0})  %></div>
      <div class="clr"></div>
  </div>
</div>

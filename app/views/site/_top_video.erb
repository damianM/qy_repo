<div class="partial" style="text-align:center">
  <div class="header p_t_video">
  </div>
  <div class='body'>
    <div class='<%= !curuser ? "main_movie" : ""%>'>
     <%= link_to '',  video.public_filename, :id => 'player', :style => "display:block;width:446px;height:348px;" -%>

    <br/>

    <script language="JavaScript" type="text/javascript">
      flowplayer("player", "/flowplayer-3.1.5.swf",{
        
        plugins: {
          pseudo: { url: '/flowplayer.pseudostreaming-3.1.3.swf' },
          controls:  {
            backgroundColor: '#000',
            backgroundGradient: 'none',
            
            scrubber: true,
            height: 20,
            sliderColor: '#222',
            progressColor: '#FFe3af',
            bufferColor: '#666666'
            
        }
        },


        // clip properties
        clip: {
          autoPlay: false,
          autoBuffering: false,
          // our clip uses pseudostreaming
          provider: 'pseudo'

         

        }
      });
    </script>
  </div>  
    <div class="grey_text" style="font-size:7.5pt;margin-bottom:8px;">
      <div style="float:left;padding-left:75px;">Średnia ocena:<%= Rate.average(:value, :conditions => ['rateatable_id = ? AND rateatable_type = ?', video.id, 'Video']) || '0' %></div>
      <div style="float:right;padding-right:80px;">Ilość wyświetleń: <%= video.counter || 0 %> razy</div>
      <div style="clear:both"></div>
    </div>
  
  </div>
</div>
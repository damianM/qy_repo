<div class="partial">
  <div class="header p_event_add">Dodaj imprezę</div>
  <div class="body">
    <% form_for :event do |f| %>

      <div class="form_row">
        <span class="required_field">*</span>
        <%= f.label :title, "Nazwa imprezy"%>
        <%= f.text_field :title %>
      </div>
      <div class="form_row">
        <span class="required_field">*</span>
        <%= f.label :description,"Opis" %>
        <%= f.text_area :description %>
      </div>
      <div class="form_row">
        <span class="required_field"> </span>
        <%= f.label :event_date, "Data rozpoczęcia" %>
        <%= f.date_select :event_start,{}, :class => "date_select"%>
        <div class="clear"></div>
      </div>
      <div class="form_row">
        <span class="required_field"> </span>
        <%= f.label :event_end, "Data zakończenia" %>
        <%= f.date_select :event_end,{}, :class => "date_select"%>
        <div class="clear"></div>
      </div>

      <div class="form_row">
        <span class="required_field">*</span>
        <%= f.label :place,"Miejsce" %>
        <%= f.text_field :place %>
      </div>

      <div class="form_row">
        <span class="required_field">*</span>
        <%= f.label :organiser_name,"Organizator" %>
        <%= f.text_field :organiser_name %>
      </div>

      <div class="form_row">
        <span class="required_field">*</span>
        <%= f.label :organiser_address,"Adres organizatora" %>
        <%= f.text_field :organiser_address %>
      </div>

      <div class="form_row">
        <span class="required_field"> </span>
        <%= f.label :organiser_www,"Strona WWW" %>
        <%= f.text_field :organiser_www %>
      </div>
      <div class="form_row">
        <span class="required_field"> </span>
        <%= f.label :organiser_email,"Adres email" %>
        <%= f.text_field :organiser_email %>
      </div>
      <div class="form_row">
        <span class="required_field">*</span>
        <%= f.label :organiser_phone,"Telefon" %>
        <%= f.text_field :organiser_phone %>
      </div>
      <div class="form_row">
        <span class="required_field"> </span>
        <%= f.label :category, "Kategoria" %>
        <%= f.select :category, @categories %>
      </div>
      <%# unless @event.files.empty? %>
        <%#*<div class="partial">%>
          <%#= insert_corners %>
          <%#*<div class="header">Pliki </div>%>
          <%#*<div class="body">%>
            <%# for file in @event.files %>

              <%#= link_file file.name,file.link %>
              <%#= link_o "Usuń", "efile", "delete", file.id if @event.rights?(curuser)%>
              <%#*<br/>%>

            <%# end %>
          <%#*</div>%>
        <%#*</div>%>
      <%# end %>
      <div class="form_row">
        <%= f.submit "Dodaj!",:class => "submit" %>

      </div>


      <span class="required_field">* - pole wymagane</span>
    <% end %>
  </div>
  <%#*<div class="partial">%>
    <%#= insert_corners %>
    <%#*<div class="header">Dodaj plik </div>%>
    <%#*<div class="body">%>
      <%# form_remote_tag :url => {:controller => "event", :action => "add_file", :id => curuser},:html => {:multipart => true} do   %>

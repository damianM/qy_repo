<div class="partial" id="n_quad">
  <div class="header">Quad</div>

  <%= link_to_remote "Zamknij okienko quada", :url => {:controller => "quad", :action => "delete_quad"}   %>

  <% form_for :quad do |f| %>
    <div class="form_row">
      <%= f.label :company_id, "Producent" %>
      <%= f.collection_select :company_id, Company.all. :id, :name, { :include_blank => true } %>
    </div>
    <div class="form_row">
      <%= f.label :qtype, "Typ/szczegóły" %>
      <%= f.text_field :qtype %>
    </div>
    <div class="form_row">
      <%= f.label :description, "opis" %>
      <%= f.text_area :description, :rows => 10  %>
    </div>
  <% end %>
</div>

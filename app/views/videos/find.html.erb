<div class="partial latest_items">
  <div class="header p_user_var">Znalezione filmy</div>
  <div class="body">
<% if @line %>
  <div class="find_line">
    <%= @line %>
  </div>
<% end %>
<% if @videos and @videos.length > 0 %>
  <%  @videos.each do |video| %>
  <div class="event">
    <div class="event_body">

      <div class="col1_dif">
        <div class="event_body_left">
          <br/>
          <div class="event_body_info">
            Dodał: <%= video.gallery.user ? video.gallery.user.login : video.gallery.event.user.login %><br/>
            Dnia: <%=ltd video.created_at%><br/>
            Ocena: <%= Rate.average(:value, :conditions => ['rateatable_id = ? AND rateatable_type = ?', video.id, 'Video']) || '0' %><br/>
            Ilość wyświetleń: <%= video.counter || 0 %><br/>
            <%= link_to "Zobacz", user_gallery_video_path(video.gallery.user, video.gallery, video), {:target => "_parent"} %>
            <br/>

          </div>

        </div>
      </div>
      <div class="col2_dif">
        <p class="event_description"><%=truncate(video.description, 200, '...') %></p>
      </div>
      <div class="clear"></div>
    </div>

  </div>
<% end %>
<%  else%>
  Niestety, nie znaleziono filmów...
<% end %>
  </div>
</div>

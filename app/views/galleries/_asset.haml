.clr
.gallery_opt_left
  %table
    %tr
      %td.gal_opt_lef Dodano
      %td.al_opt_right= asset.created_at.strftime("%d.%m.%Y, %H:%M") 

    - if asset.description !=""
      %tr
        %td.gal_opt_left Opis:
        %td.gal_opt_right= truncate(asset.description, 9, '...')

    - if asset.rights?(current_user)
      %tr
        %td.gal_opt_left
          = link_to image_tag("/edit.png"), eval("edit_user_gallery_#{asset.class.to_s.downcase}_path(@user, @gallery, asset)"), { :title => "Edytuj", :class => "picture_link" }
        %td.gal_opt_right
          = link_to image_tag("/delete.png"), eval("user_gallery_#{asset.class.to_s.downcase}_path(@user, @gallery, asset)"), { :method => :delete, :confirm => "Czy jesteÅ› pewien?", :title => "UsuÅ„", :class => "picture_link"} 

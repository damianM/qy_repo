        <%= label_tag :query, "Wpisz zapytanie" %>
        <%= text_field_tag :query %>
      </div>
      <div class="form_row">
        <%= submit_tag "Szukaj!"%>
      </div>

    <% end %>
    <br/><br/>
    <% unless @teams.empty? %>
      <% for team in @teams %>
        <%= render :partial => "team", :locals => {:team => team} %>
      <% end %>
    <% else %>
